<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_quantity"
        android:padding="16dp"
        android:textAllCaps="true"
         />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/button_decrement"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="@string/button_decrement"
            android:layout_marginLeft="16dp"
            android:onClick="decrement" />

    <TextView
        android:id="@+id/quantity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/int_count"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_toRightOf="@id/button_decrement"
        android:padding="16dp"
        />

        <Button
            android:id="@+id/button_increment"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="@string/button_increment"
            android:onClick="increment"
            android:layout_toRightOf="@id/quantity_text_view"/>



    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_price"
        android:padding="16dp"
        android:textAllCaps="true"
        />

    <TextView
        android:id="@+id/price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/int_price"
        android:textColor="#000000"
        android:textSize="16sp"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_order"
        android:layout_marginLeft="16dp"
        android:onClick="submitOrder"/>

</LinearLayout>